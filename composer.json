{
	"name": "mediaformat/embed-archive-org",
	"description": "Embed media from Archive.org using the core/embed block.",
	"type": "wordpress-plugin",
	"autoload": {
		"classmap": [
			"includes/"
		]
	},
	"authors": [
		{
			"name": "Django Doucet"
		}
	],
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.2"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"optimize-autoloader": true,
		"classmap-authoritative": true
	},
	"scripts": {
		"format": "./vendor/bin/phpcbf -ps . --standard=WordPress --ignore=vendor,node_modules,src,build --report-summary --report-source || true",
		"lint": "./vendor/bin/phpcs -ps . --standard=WordPress --ignore=vendor,node_modules,src,build"
	}
}
